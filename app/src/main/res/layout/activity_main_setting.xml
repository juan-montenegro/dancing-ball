<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainSetting">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:freezesText="false"
        android:text="Dancing Ball Setting"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F48121"
        android:textColorHint="#F44336"
        android:textIsSelectable="false"
        android:textSize="45sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/settingtextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:freezesText="false"
        android:text="choose the color of the ball"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#304FFE"
        android:textColorHint="#F44336"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/ButtonBallRed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/computer_icons_red_polka_dot_clip_art_red_button_icon_png_49783419126ac1f3a4e00ddc5643ac6c"
            app:icon="@drawable/computer_icons_red_polka_dot_clip_art_red_button_icon_png_49783419126ac1f3a4e00ddc5643ac6c" />

        <Button
            android:id="@+id/ButtonBallBlue"
            android:layout_width="wrap_content"
            android:layout_height="154dp"
            android:layout_weight="1"
            android:foreground="@drawable/button_blue_clip_art_button_png_d55597d0f8bbbc9393d4c8f17964e17b" />

        <Button
            android:id="@+id/ButtonBallGreen"
            android:layout_width="wrap_content"
            android:layout_height="154dp"
            android:layout_weight="1"
            android:foreground="@drawable/royalty_free_clip_art_glossy_orb_cliparts_c13937858ba34ef217efef845c2cb143" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:freezesText="false"
        android:text="choose control"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#304FFE"
        android:textColorHint="#F44336"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/ManSens"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_weight="1"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:foreground="@drawable/icongiro3" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Manfle"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:foreground="@drawable/flachasicosn" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:freezesText="false"
        android:text="Back"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#304FFE"
        android:textColorHint="#F44336"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="261dp"
        android:layout_height="113dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/pngfind_com_back_button_png_2641123"
            android:onClick="backtomainsetting"
            android:text="Button"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>