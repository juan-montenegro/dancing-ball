<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainSetting">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:freezesText="false"
        android:text="Dancing Ball Setting"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F48121"
        android:textColorHint="#F44336"
        android:textIsSelectable="false"
        android:textSize="45sp"
        android:textStyle="bold|italic" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/settingtextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:freezesText="false"
        android:text="choose the color of the ball"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0B0A0A"
        android:textColorHint="#F44336"
        android:textIsSelectable="false"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/ButtonBallRed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/computer_icons_red_polka_dot_clip_art_red_button_icon_png_49783419126ac1f3a4e00ddc5643ac6c"
            app:icon="@drawable/computer_icons_red_polka_dot_clip_art_red_button_icon_png_49783419126ac1f3a4e00ddc5643ac6c" />

        <Button
            android:id="@+id/ButtonBallBlue"
            android:layout_width="wrap_content"
            android:layout_height="154dp"
            android:layout_weight="1"
            android:foreground="@drawable/button_blue_clip_art_button_png_d55597d0f8bbbc9393d4c8f17964e17b" />

        <Button
            android:id="@+id/ButtonBallGreen"
            android:layout_width="wrap_content"
            android:layout_height="154dp"
            android:layout_weight="1"
            android:foreground="@drawable/royalty_free_clip_art_glossy_orb_cliparts_c13937858ba34ef217efef845c2cb143" />

    </LinearLayout>

</LinearLayout>