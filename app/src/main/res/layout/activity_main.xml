<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:freezesText="false"
        android:text="@string/title_activity_main"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F48121"
        android:textColorHint="#F44336"
        android:textIsSelectable="false"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp" />

    <LinearLayout
        android:layout_width="153dp"
        android:layout_height="163dp"
        android:layout_marginTop="350dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black_overlay"
            android:text="@string/btn_start_text"
            android:textColor="@color/white"
            android:textColorHighlight="#FEFEFE"
            android:textColorLink="#FDFDFD"
            app:icon="@android:drawable/ic_media_play"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black_overlay"
            android:onClick="openSettingBtn"
            android:text="@string/open_setting_btn_text"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_menu_preferences"
            app:iconTint="@color/white"
            app:strokeColor="#9C27B0" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black_overlay"
            android:onClick="closeApplicationBtn"
            android:text="@string/btn_exit_text"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconTint="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>